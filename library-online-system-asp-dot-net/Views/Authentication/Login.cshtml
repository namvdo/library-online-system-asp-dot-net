@{
    Layout = null;
}
@model library_online_system_asp_dot_net.Models.Borrower

<!DOCTYPE html>
<html lang="en">
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/animate.css">
    <link rel="stylesheet" href="~/Content/hamburgers.min.css">
    <link rel="stylesheet" href="~/Content/animsition.min.css">
    <link rel="stylesheet" href="~/Content/select2.min.css">
    <link rel="stylesheet" href="~/Content/daterangepicker.css">
    <link rel="stylesheet" href="~/Content/util.css">
    <link rel="stylesheet" href="~/Content/main.css">
</head>
<body>
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">

            @using (Html.BeginForm("Login", "Authentication", FormMethod.Post, new {@class = "register-form", @id = "register-form"}))
            {
                @Html.AntiForgeryToken()
                <span class="login100-form-title p-b-43">
                    Login to continue
                </span>


                <div class="wrap-input100 validate-input" data-validate="Valid username is required">
                    @* <input class="input100" type="text" name="username"> *@
                    @Html.TextBoxFor(borrower => borrower.Username, new {@class="input100"})
                    <span class="focus-input100"></span>
                    <span class="label-input100">Username</span>
                </div>


                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    @* <input class="input100" type="password" name="password"> *@
                    @Html.PasswordFor(borrower => borrower.Password, new {@class="input100"})
                    <span class="focus-input100"></span>
                    <span class="label-input100">Password</span>
                </div>


                <div class="container-login100-form-btn">
                    <button class="login100-form-btn" type="submit">
                        Login
                    </button>
                </div>

                <div class="text-center p-t-46 p-b-20">
                    <span class="txt2">
                        Don't have an account? Click @Html.ActionLink("here", "Register", "Authentication") to sign up a new one.
                    </span>
                </div>
            }
            <div class="login100-more" style="background-image: url('../../Images/bg-01.jpg')"></div>
        </div>
        @if (ViewBag.Error != null)
        {
            <div class="text-danger text-center">
                @ViewBag.Error
            </div>
        }
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
</body>
</html>