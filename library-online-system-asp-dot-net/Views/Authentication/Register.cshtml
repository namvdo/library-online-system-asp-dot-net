@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign up for the Online Library</title>
    <link rel="stylesheet" href="~/Content/register.css">
     @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="main">

    <!-- Sign up form -->
    @using (Html.BeginForm("Register", "Authentication", FormMethod.Post, new {@class = "register-form", @id = "register-form"}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false)
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up to the Online Library</h2>
                        <div class="form-group">
                            <label for="name">
                                <i class="zmdi zmdi-account material-icons-name"></i>
                            </label>
                            <input type="text" name="username" id="name" placeholder="Type username..." value="@ViewBag.username"/>
                        </div>
                        <div class="form-group">
                            <label for="pass">
                                <i class="zmdi zmdi-lock"></i>
                            </label>
                            <input type="password" name="password" id="pass" placeholder="Password"/>
                        </div>
                        <div class="form-group">
                            <label for="re-pass">
                                <i class="zmdi zmdi-lock-outline"></i>
                            </label>
                            <input type="password" name="password-repeat" id="re_pass" placeholder="Repeat your password"/>
                        </div>
                        <div class="form-group">
                            <label for="email">
                                <i class="zmdi zmdi-email"></i>
                            </label>
                            <input type="email" name="email" id="email" placeholder="Your Email" value="@ViewBag.email"/>
                        </div>

                        <div class="form-group">
                            <label for="name">
                                <i class="zmdi zmdi-account material-icons-name"></i>
                            </label>
                            <input type="text" name="fullname" id="name" placeholder="Your Full Name" value="@ViewBag.fullname"/>
                        </div>


                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Register"/>
                        </div>
                    </div>
                    <div class="signup-image">
                        <figure>
                            <img src="~/Images/signup-image.png" alt="sing up image">
                        </figure>
                        @Html.ActionLink("I am already a member", "Login", "Authentication", new {@class="signup-image-link"});
                    </div>
                </div>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }
                @if (ViewData["Message"] != null)
                {
                    <div class="alert alert-success text-center">@ViewData["Message"]. You can click @Html.ActionLink("here", "Login", "Authentication") to login!</div>
                }
            </div>
        </section>
    }

</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
</body>
</html>