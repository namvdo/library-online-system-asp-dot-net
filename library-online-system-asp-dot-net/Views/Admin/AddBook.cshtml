@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Book</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="~/AdminCSS/bootstrap.min.css">
    <link href="~/AdminCSS/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/AdminCSS/style1.css">
</head>
<body>
<div class="dashboard-main-wrapper">

    <div class="dashboard-header">
        <nav class="navbar navbar-expand-lg bg-white fixed-top">
            <a class="navbar-brand" href="#">Open Library Admin</a>

        </nav>
    </div>

    <div class="nav-left-sidebar sidebar-dark">
        <div class="menu-list">
            <nav class="navbar navbar-expand-lg navbar-light" style="font-size:large">

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-column">

                        <li class="nav-item ">
                            <a class="nav-link " href="ManageBook">Manage Book</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="ManageUser">Manage User</a>

                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Log out", "Logout", "Authentication", null, new {@class="nav-link"})
                        </li>

                    </ul>
                </div>
            </nav>
        </div>
    </div>
    @using (Html.BeginForm("AddBook", "Admin", FormMethod.Post))
    {
        <div class="dashboard-wrapper">
            <div class="dashboard-ecommerce">
                <div class="container-fluid dashboard-content ">

                    <div class="ecommerce-widget">


                        <div class="container" style="margin-top: 20px;width:800px;">
                            <div class="row">


                                <div class="col-md-4 order-md-2 mb-4">
                                    <h1 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-muted">Author</span>

                                    </h1>
                                    <div class="mb-3">
                                        <label for="author_name">Author_Name</label>
                                        <input type="text" name="author_name" class="form-control" placeholder="" value="" required="">

                                    </div>

                                    <h1 class="mb-3">Categories</h1>
                                    <div class="d-block my-3">
                                        <div class="custom-control custom-radio">
                                            <select id="categories" name="categories">
                                                <option value="Bussiness">Bussiness</option>
                                                <option value="Fiction">Fiction</option>
                                                <option value="Health">Health</option>
                                                <option value="History">History</option>
                                                <option value="Novel">Novel</option>
                                                <option value="Romance">Romance</option>
                                            </select>
                                        </div>
                                    </div>
                                    <input style="background-color: #4CAF50;
                                                   width: 200px;
                                                   border: none;
                                                   color: white;
                                                   padding: 15px 32px;
                                                   text-align: center;
                                                   text-decoration: none;
                                                   font-size: 16px;
                                                   margin: 4px 2px;
                                                   cursor: pointer;" type="submit" value="Add">

                                </div>
                                <div class="col-md-8 order-md-1">

                                    <h1>Add Book</h1>

                                    <div class="mb-3">
                                        <label for="isbn">ISBN</label>
                                        <input type="text" name="isbn" class="form-control" placeholder="" value="" required="">

                                    </div>



                                    <div class="mb-3">
                                        <label for="title">Title <span class="text-muted"></span></label>
                                        <input type="text" name="title" class="form-control">

                                    </div>

                                    <div class="mb-3">
                                        <label for="publisher">Publisher</label>
                                        <input type="text" name="publisher" class="form-control" required="">

                                    </div>


                                    <div class="mb-3">
                                        <label for="description">Description <span class="text-muted"></span></label>
                                        <textarea type="text" name="description" class="form-control" required=""></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <label for="date">Add Date</label>
                                        <input type="text" name="date" class="form-control" value="@DateTime.Now">

                                    </div>
                                    <div class="mb-3">
                                        <label for="img">Cover_IMG</label>
                                        <input type="text" name="img" class="form-control" required="">

                                    </div>
                                    <p>@ViewBag.message</p>
                                </div>
                                    
                            </div>
                        </div>

                    </div>


                </div>

            </div>

        </div>
    }
</div>
<style>
    p {
        color: green;
    }
</style>
      
</body>
</html>