@using library_online_system_asp_dot_net.DAOs
@using library_online_system_asp_dot_net.Models

@{
    Layout = "../Shared/_Layout.cshtml";
}

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>Profile - Brand</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" />
</head>

<body id="page-top" style="font-size: medium">
    <div id="wrapper">

        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                @{ Borrower b = (Borrower)ViewBag.borrower;}
                <div class="container-fluid" style="font-size: medium;background:linear-gradient(to right, #ffdde1, #ee9ca7);">
                    <h1 style="color: forestgreen;margin-left: 80px; font-family: Cooper;">Profile</h1>
                    <div class="row mb-3">
                        <div class="col-lg-4" style="width:600px;margin-left:80px">
                            <div class="card mb-3">
                                <div class="card-body text-center shadow">
                                    <img class="rounded-circle mb-3 mt-4" src="~/Images/bg-01.jpg" width="160" height="160" />
                                    <div class="mb-3">
                                       
                                        <p style="font-size: x-large;color:forestgreen">@b.Username</p>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-6">

                            <div class="row">
                                <div class="col">
                                    <div class="card shadow mb-3">
                                        <div class="card-header py-3">
                                            <p class="text-primary m-0 font-weight-bold" style="font-size:x-large">User Profile</p>
                                        </div>
                                        <div class="card-body">
                                            @using (Html.BeginForm("Profile", "Home", FormMethod.Post))
                                            {

                                                <div class="col">
                                                    <div class="form-group"><label for="username"><strong>Full Name</strong></label><input class="form-control" style="font-size:large" type="text" name="fullname" value="@b.Fullname" /></div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group"><label for="email"><strong>Email Address</strong></label><input class="form-control" style="font-size:large" type="text" name="email" value="@b.Email" /></div>
                                                </div>


                                                <div class="col">
                                                    <div class="form-group"><label><strong>Deposit</strong></label><input class="form-control" style="font-size:large" type="text" name="deposit" value="@b.Deposit" /></div>
                                                </div>

                                                <div class="form-group"><button class="btn btn-primary btn-sm" type="submit" name="btn" style="font-size:medium">Save Changed</button></div>
                                                <p>@ViewBag.message</p>
                                            }
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card shadow mb-5">
                        <div class="card-header py-3">
                            <p class="text-primary m-0 font-weight-bold" style="font-size:x-large">Book Rented</p>
                            <table class="table">
                                <tr>
                                    <th>Reservation ID</th>
                                    <th>ISBN</th>
                                    <th>Created Date</th>
                                    <th>Due Date</th>
                                    <th>Status</th>
                                    <th>Amount</th>
                                </tr>
                                @foreach (var res in @ViewBag.reservations)
                                {
                                    <tr>
                                        <td>@res.Id</td>
                                        <td>@res.Isbn</td>
                                        <td>@res.CreateDate</td>
                                        <td>@res.DueDate</td>
                                        <td>@res.Status</td>
                                        <td>@res.Amount</td>
                                    </tr>

                                }

                            </table>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>
    </div>
</body>

</html>